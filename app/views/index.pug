doctype html
html
  include config-card.pug 
  include create-new.pug
  include doc.pug
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title eduvpn
    link(rel='stylesheet', href='semantic/dist/semantic.css')
    link(rel='stylesheet', href='css/app.css')
  body
    .bg-cover
      .icon-bg
    .ui.container
      block header
        .ui.top.fixed.icon.small.inverted.green.menu.widescreen
          .ui.container
            .item.header
              img(src='img/DeiC-logo.svg' alt='DeIC Logo')
              | &nbsp;&nbsp;edu VPN
            .right.menu
              a.item.active(href="new.html")
                i.download.icon
                | New
              a.item(href="configs.html")
                i.list.icon
                | Configurations
              a.item(href="help.html")
                i.help.icon
                | Help
              a.item(href="account.html")
                i.user.icon
                | Account
      block content
        .fxd-content.padded
          - var act = 5
          +create-panel(act)
        .ui.bottom.fixed.labeled.icon.mini.fluid.four.item.inverted.green.menu.mobile
          a.item.active(href="/")
            i.download.icon
            | New
          a.item(href="configs.html")
            i.list.icon
            | Configs
          a.item(href="help.html")
            i.help.icon
            | Help
          a.item(href="account.html")
            i.user.icon
            | Account
